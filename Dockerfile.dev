FROM node:20-alpine

WORKDIR /app

ENV NODE_ENV=development

# Install global tooling if needed (optional)
# RUN npm install -g pnpm

COPY package*.json ./
RUN npm install --silent

# Copy the rest (we will override with a volume in docker-compose)
COPY . .

EXPOSE 5173

# Vite dev server listens on 0.0.0.0 to allow container access
CMD ["npm", "run", "dev", "--", "--host"]
